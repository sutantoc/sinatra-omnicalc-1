  <dt>
    APR
  </dt>
  <dd>
    <%= @user_APR.to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @user_years %>
  </dd>

